<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="0dp"
    android:background="#e0f7fa"
    android:orientation="vertical"
    android:padding="0dp"> <!-- Light cyan background -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="#ffffff"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/HamburgerButton"
            android:layout_width="50dp"
            android:layout_height="63dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/baseline_more_vert_24" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="Translation App"
            android:fontFamily="sans-serif-medium"
            android:textStyle="bold"
            android:textColor="#000000"
            android:gravity="center"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/Profilebutton"
            android:layout_width="50dp"
            android:layout_height="63dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/baseline_person_24" />

    </LinearLayout>
    <!-- Upper Half -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingTop="1dp">

        <!-- Output Box (Mirrored) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="@drawable/roundcorner"
            android:backgroundTint="#80deea"
            android:padding="10dp"
            android:rotationX="176"
            android:rotationY="180"> <!-- Cyan background for symmetry -->

            <TextView
                android:id="@+id/leftTextBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="#ffffff"
                android:gravity="center"
                android:padding="10dp"
                android:text="Output: ............"
                android:textColor="#555555"
                android:textSize="18sp" />
        </LinearLayout>

        <!-- Input Box (Mirrored) with Microphone Button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/roundcorner"
            android:backgroundTint="#80deea"
            android:orientation="horizontal"
            android:padding="10dp"> <!-- Cyan background for symmetry -->

            <ImageButton
                android:id="@+id/leftButton"
                android:layout_width="63dp"
                android:layout_height="63dp"
                android:layout_gravity="center_vertical"
                android:background="?attr/selectableItemBackground"
                android:contentDescription="Speak"
                android:rotationX="179"
                android:src="@drawable/baseline_mic_24"
                app:tint="#00acc1" /> <!-- Cyan tint for microphone -->

            <EditText
                android:id="@+id/leftEditText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:background="#ffffff"
                android:hint="Type here: ............"
                android:inputType="text"
                android:padding="10dp"
                android:rotationX="180"
                android:rotationY="180"
                android:textColor="#555555"
                android:textSize="16sp" /> <!-- Rotate only the text -->
        </LinearLayout>

        <Spinner
            android:id="@+id/leftLanguageDropdown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:backgroundTint="#00acc1"
            android:gravity="center"
            android:rotationY="3" />

        <Button
            android:id="@+id/leftSendButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#FCFFFFFF"
            android:rotationX="180"
            android:rotationY="180"
            android:text="Send" /> <!-- Cyan background for dropdown -->
    </LinearLayout>

    <!-- Lower Half -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingTop="16dp">

        <!-- Output Box (Normal) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="@drawable/roundcorner"
            android:backgroundTint="#80deea"
            android:padding="10dp"> <!-- Cyan background to match top -->

            <TextView
                android:id="@+id/rightTextBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="#ffffff"
                android:gravity="center"
                android:padding="10dp"
                android:text="Output: ............"
                android:textColor="#555555"
                android:textSize="18sp" />
        </LinearLayout>

        <!-- Input Box (Normal) with Microphone Button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/roundcorner"
            android:backgroundTint="#80deea"
            android:orientation="horizontal"
            android:padding="10dp"> <!-- Cyan background to match top -->

            <ImageButton
                android:id="@+id/rightButton"
                android:layout_width="63dp"
                android:layout_height="63dp"
                android:background="?attr/selectableItemBackground"
                android:contentDescription="Speak"
                android:src="@android:drawable/ic_btn_speak_now"
                app:tint="#00acc1" /> <!-- Cyan tint for microphone -->

            <EditText
                android:id="@+id/rightEditText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:background="#ffffff"
                android:hint="Type here: ............"
                android:inputType="text"
                android:padding="10dp"
                android:textColor="#555555"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Language Dropdown -->
        <Spinner
            android:id="@+id/rightLanguageDropdown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:backgroundTint="#00acc1"
            android:gravity="center" />

        <Button
            android:id="@+id/rightSendButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#FCFFFFFF"
            android:text="Send" /> <!-- Cyan background for dropdown -->
    </LinearLayout>
</LinearLayout>